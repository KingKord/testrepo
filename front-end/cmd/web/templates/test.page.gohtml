{{template "base" .}}

{{define "content" }}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Test backend</h1>
                <hr>
                <div class="row">
                    <div class="col">
                        <a href="javascript:void(0)" id="checkBackend" class="btn btn-outline-secondary">Test Backend</a>
                    </div>
                </div>
                <div class="row mt-1">
                    <div class="col">
                        <a href="javascript:void(0)" id="addNewUser" class="btn btn-outline-secondary">Test addNewUser</a>
                        <label for="info">Enter Name:</label>
                        <input type="text" id="info" name="info">
                        <label for="surname">Enter Surname:</label>
                        <input type="text" id="surname" name="surname">
                        <label for="patronymic">Enter Patronymic:</label>
                        <input type="text" id="patronymic" name="patronymic">
                    </div>
                </div>

                <div class="row mt-1">
                    <div class="col">
                        <a href="javascript:void(0)" id="checkGet" class="btn btn-outline-secondary">Test GetAll</a>
                        <label for="gender">Enter Gender:</label>
                        <input type="text" id="gender" name="gender">
                        <label for="page">Enter Page:</label>
                        <input type="text" id="page" name="page">
                        <label for="limit">Enter Amount Per Page:</label>
                        <input type="text" id="limit" name="limit">
                    </div>
                </div>

                <div id="output" class="mt-5" style="outline: 1px solid silver; padding: 2em;">
                    <span class="text-muted">Output shows here...</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h4 class="mt-5">Sent</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="payload"><span class="text-muted">Nothing sent yet...</span></pre>
                </div>
            </div>
            <div class="col">
                <h4 class="mt-5">Received</h4>
                <div class="mt-1" style="outline: 1px solid silver; padding: 2em;">
                    <pre id="received"><span class="text-muted">Nothing received yet...</span></pre>
                </div>
            </div>
        </div>
    </div>
{{end}}

{{define "js"}}
    <script>
        let checkBackend = document.getElementById("checkBackend");
        let addNewUser = document.getElementById("addNewUser");
        let checkGet = document.getElementById("checkGet");
        let output = document.getElementById("output");
        let sent = document.getElementById("payload");
        let received = document.getElementById("received");


        addNewUser.addEventListener("click", function () {
            const payload = {
                name: document.getElementById("info").value,
                surname: document.getElementById("surname").value,
                patronymic: document.getElementById("patronymic").value,
            }

            const headers = new Headers();
            headers.append("Content-Type", "application/json");


            const body = {
                method: 'POST',
                body: JSON.stringify(payload),
                headers: headers,
            }

            fetch("http:\/\/localhost:8080/new", body)
                .then((response) => response.json())
                .then((data) => {
                    sent.innerHTML = JSON.stringify(payload, undefined, 4);
                    received.innerHTML = JSON.stringify(data, undefined, 4);
                    if (data.error) {
                        output.innerHTML += `<br><strong>Error:</strong> ${data.message}`;
                    } else {
                        output.innerHTML += `<br><strong>Response from backend</strong>: ${data.message}`;
                    }
                })
                .catch((error) => {
                    output.innerHTML += "<br><br>Error: " + error;
                })
        })

        checkGet.addEventListener("click", function () {
            const body = {
                method: 'GET',
            }
            let URL = "http:\/\/localhost:8080/users"
            let gender = document.getElementById("gender").value
            let page = document.getElementById("page").value
            let limit = document.getElementById("limit").value
            if (gender !== "" || page !== "" || limit !== "") {
                URL += "?"
            }
            if (gender !== "") {
                URL += "gender=" + gender
                if (limit !== "" || page !== "") {
                    URL += "&"
                }
            }
            if (page !== "") {
                URL += "page=" + page
                if (limit !== "") {
                    URL += "&"
                }
            }
            if (limit !== "") {
                URL += "limit=" + limit
            }
            console.log(URL)


            // if (document.getElementById("pageGender").value !== "") {
            //
            // }
            fetch(URL
                // + "&page=" + document.getElementById("pageGender").value
                // + "&limit=" + document.getElementById("limitGender")
                , body)
                .then((response) => response.json())
                .then((data) => {
                    sent.innerHTML = "empty get request";
                    received.innerHTML = JSON.stringify(data, undefined, 4);
                    if (data.error) {
                        output.innerHTML += `<br><strong>Error:</strong> ${data.message}`;
                    } else {
                        output.innerHTML += `<br><strong>Response from backend</strong>: ${data.message}`;
                    }
                })
                .catch((error) => {
                    output.innerHTML += "<br><br>Error: " + error;
                })
        })
        checkBackend.addEventListener("click", function () {

            const body = {
                method: 'POST'
            }

            fetch("http:\/\/localhost:8080", body)
                .then((response) => response.json())
                .then((data) => {
                    sent.innerHTML = "empty post request";
                    received.innerHTML = JSON.stringify(data, undefined, 4);
                    if (data.error) {
                        console.log(data.message)
                    } else {
                        output.innerHTML += `<br><strong>Response from backend</strong>: ${data.message}`;
                    }
                })
                .catch((error) => {
                    output.innerHTML += "<br><br>Error: " + error;
                })
        })
    </script>
{{end}}
